{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2015",
    "sourceMap": true,

    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "allowUnreachableCode": true,
    "allowUnusedLabels": true,
    "noStrictGenericChecks": true,
    "skipLibCheck": true
  }
}
